<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 默认横向动画 -->
    <!-- 从名为A的activity跳转到B，B也可以跳转到C，其中转场动画设置在B上。 -->
    <style name="DefaultHorizontalAnim">
        <!-- A跳转B时，B的动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/_core_horizontal_from_right</item>
        <!-- A跳转B时，A的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/_core_horizontal_to_left</item>
        <!-- A跳转到B后，后退到A时，A的进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/_core_horizontal_from_left</item>
        <!-- A跳转到B后，后退到A时，B的退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/_core_horizontal_to_right</item>
    </style>

    <!-- 默认纵向动画 -->
    <!-- 从名为A的activity跳转到B，B也可以跳转到C，其中转场动画设置在B上。 -->
    <style name="DefaultVerticalAnim">
        <!-- A跳转B时，B的动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/_core_vertical_to_top</item>
        <!-- A跳转B时，A的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/_core_no_anim</item>
        <!-- A跳转到B后，后退到A时，A的进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/_core_no_anim</item>
        <!-- A跳转到B后，后退到A时，B的退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/_core_vertical_from_top</item>
    </style>

    <!-- 主题 -->
    <style name="StarterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/DefaultVerticalAnim</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="StarterTheme.Horizontal" parent="StarterTheme">
        <item name="android:windowAnimationStyle">@style/DefaultHorizontalAnim</item>
    </style>

    <!--自定义对话框样式-->
    <style name="DialogNoAnimationTheme" parent="android:Theme.Dialog">
        <!--进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/_core_no_anim</item>
        <!--退出时的动画-->
        <item name="android:windowExitAnimation">@anim/_core_no_anim</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTheme</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="WindowAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/_core_no_anim</item>
        <item name="android:windowExitAnimation">@anim/_core_no_anim</item>
        <item name="android:windowShowAnimation">@anim/_core_no_anim</item>
        <item name="android:windowHideAnimation">@anim/_core_no_anim</item>
    </style>

    <style name="TextAppearance.Active" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Inactive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/hint</item>
    </style>
</resources>
