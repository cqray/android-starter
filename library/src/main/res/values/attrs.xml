<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 标题栏 -->
    <declare-styleable name="Toolbar">
        <!-- 一般属性 -->
        <attr name="tbPadding" format="dimension" />
        <attr name="tbElevation" format="dimension" />
        <attr name="tbUseRipple" format="boolean" />
        <!-- 标题 -->
        <attr name="tbTitleText" format="string" localization="suggested" />
        <attr name="tbTitleTextColor" format="color" />
        <attr name="tbTitleTextSize" format="dimension" />
        <attr name="tbTitleTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <!-- 标题可编辑 -->
        <attr name="tbTitleEditable" format="boolean" />
        <!-- 标题居中 -->
        <attr name="tbTitleCenter" format="boolean" />
        <attr name="tbTitleSpace" format="dimension" />
        <!-- 返回 -->
        <attr name="tbBackIcon" format="reference" />
        <attr name="tbBackIconVisible" format="boolean" />
        <attr name="tbBackText" format="string" localization="suggested" />
        <attr name="tbBackTextColor" format="color" />
        <attr name="tbBackTextSize" format="dimension" />
        <attr name="tbBackTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="tbBackSpace" format="dimension" />
        <!-- 行为相关属性 -->
        <attr name="tbActionTextColor" format="color" />
        <attr name="tbActionTextSize" format="dimension" />
        <attr name="tbActionTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="tbActionSpace" format="dimension" />
        <!-- 分割线相关属性 -->
        <attr name="tbDividerColor" format="color" />
        <attr name="tbDividerHeight" format="dimension" />
        <attr name="tbDividerMargin" format="dimension" />
        <attr name="tbDividerVisible" format="boolean" />
    </declare-styleable>

    <!-- Action布局控件 -->
    <declare-styleable name="ActionLayout">
        <!-- 是否使用水波纹 -->
        <attr name="alUseRipple" format="boolean" />
        <attr name="alActionTextColor" format="color" />
        <attr name="alActionTextSize" format="dimension" />
        <attr name="alActionTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <!-- Action控件间隔 -->
        <attr name="alActionSpace" format="dimension" />
    </declare-styleable>

    <!-- 文本图标控件 -->
    <declare-styleable name="IconTextLayout">
        <!-- 图标位置 -->
        <attr name="itlGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <!-- 图标文本间隔 -->
        <attr name="itlSpace" format="dimension" />
        <!-- 是否使用水波纹 -->
        <attr name="itlUseRipple" format="boolean" />
        <attr name="android:src" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:textStyle" />
    </declare-styleable>
</resources>
